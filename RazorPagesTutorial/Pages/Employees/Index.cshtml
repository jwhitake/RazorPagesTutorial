@page
@model RazorPagesTutorial.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}


<style>
    .btn {
        width: 75px;
    }
</style>

<h1>Employees</h1>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%" ;">
            <h3>@employee.Name</h3>

            <img class="card-img-top imageThumnail" src="@photoPath" asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-Id="@employee.Id" class="btn btn-outline-primary m-1">View</a>
                <a href="#" class="btn btn-outline-info m-1">Edit</a>
                <a href="#" class="btn btn-outline-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
